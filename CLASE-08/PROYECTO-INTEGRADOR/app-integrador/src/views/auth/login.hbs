{{> navbar}}
  
  <div class="container">
    <div class="main-content fade-in">
      <h2>🔐 Iniciar Sesión</h2>
      
      <div class="form-container">
        <form method="POST" action="/auth/login">
          <div class="form-group">
            <label for="email">📧 Email</label>
            <input 
              id="email"
              name="email" 
              type="email"
              class="form-control"
              placeholder="tu@email.com" 
              required 
            />
          </div>
          
          <div class="form-group">
            <label for="password">🔒 Contraseña</label>
            <input 
              id="password"
              name="password" 
              type="password" 
              class="form-control"
              placeholder="Tu contraseña" 
              required 
            />
          </div>
          
          <div style="text-align: center;">
            <button type="submit" class="btn btn-primary">
              Ingresar
            </button>
          </div>
        </form>
        
        {{#if error}}
          <div class="message message-error">
            ❌ {{error}}
          </div>
        {{/if}}
        
        {{#if success}}
          <div class="message message-success">
            ✅ {{success}}
          </div>
        {{/if}}
        <div style="text-align: center; margin-top: 2rem; padding-top: 1rem; border-top: 1px solid #c3e6cb;">
          <p style="color: #5a6c57;">¿No tienes una cuenta?</p>
          <a href="/auth/register" class="btn btn-secondary">Registrarse</a>
        </div>
      </div>
    </div>
  </div>